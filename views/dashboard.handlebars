<section>
  <h2>Create New content</h2>

  <form>
    <div>
      <label for="content-title">Title</label>
      <input type="text" id="content-title" name="content-title" />
    </div>
    <div>
      <label for="content-url">Link</label>
      <input id="content-url" name="content-url" />
    </div>
    <button type="submit" class="btn">Create</button>
  </form>
</section>

{{#if contents.length}}
<section>
  <h2>Your contents</h2>
  <ol>
    {{#each contents as |content|}}
    <li>
      {{> content-info content}}
      <a href="/dashboard/edit/{{content.id}}" class="edit-link">Edit content</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

<script src="/public/javascript/add-content.js"></script>